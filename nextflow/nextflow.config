params {
    input = null
    outdir = './results'
    max_cpus = 4
    max_memory = '8.GB'
    max_time = '6.h'
}

process {
    cpus = 2
    memory = '4.GB'
    time = '2.h'
}

profiles {
    docker {
        docker.enabled = true
        docker.userEmulation = true
    }
    
    test {
        params.input = 'assets/test_data.csv'
        params.outdir = './test_results'
    }
}